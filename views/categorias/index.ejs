<%- include('../header') %>
<div class="mt-3 container">
  <a class="btn btn-outline-primary" href="/categorias/nova">Nova Categoria</a>
  <a class="btn btn-outline-primary" href="/publicacoes/nova">Nova Publicação</a>
  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th scope="col">Categoria</th>
        <th scope="col">Ações</th>
      </tr>
    </thead>
    <tbody>
      <% categorias.forEach(categoria => { %>
      <tr class="align-middle">
        <td>
          <a href="/publicacoes/categoria/<%= categoria.id %>">
            <%= categoria.categoria %>
          </a>
        </td>
        <td>
          <a class="btn btn-primary" href="/categorias/editar/<%= categoria.id %>">Editar</a>
          <a class="btn btn-outline-danger" href="/categorias/excluir/<%= categoria.id %>">Excluir</a>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>
<%- include('../footer') %>   