<%- include('../header') %>
<div class="mt-3 container">
  <a class="btn btn-outline-primary" href="/publicacoes/nova">Nova Publicação</a>
  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th scope="col">Publicação</th>
        <th scope="col">Ações</th>
      </tr>
    </thead>
    <tbody>
      <% publicacoes.forEach(publicacao => { %>
      <tr class="align-middle">
        <td><%= publicacao.titulo %></td>
        <td>
          <a class="btn btn-primary" href="/publicacoes/editar/<%= categoria %>/<%= publicacao.id %>">Editar</a>
          <a class="btn btn-outline-danger" href="/publicacoes/excluir/<%= categoria %>/<%= publicacao.id %>">Excluir</a>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>
<%- include('../footer') %>   