<%- include('../header') %>
<div class='mt-3 container'>
  <form method="POST" action="/publicacoes/editar/<%= categoria %>/<%= publicacao.id %>">
    <div class='mb-3'>
    <label for="titulo">Título</label>
      <input type="text" class="form-control" id="titulo" name="titulo" placeholder="Digite o Título" value="<%= publicacao.titulo %>">
    </div>
    <label for="conteudo">Conteúdo</label>
    <div class='mb-3'>
      <textarea type="text" class="form-control" id="conteudo" name="conteudo" placeholder="Digite o Conteúdo"><%= publicacao.conteudo %></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a class="btn btn-outline-dark" href="/publicacoes/categoria/<%= publicacao.id %>" role="button">Cancelar</a>
  </form>
</div>
<%- include('../footer') %>